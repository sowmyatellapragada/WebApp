@page "{id:long}"
@model EditorModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="bg-primary text-white text-center m-2 p2">Editor</div>
    <div class="m-2">
        <table class="table table-sm table-striped tablebordered">
            <tbody>
                @*<tr><th>Name</th><td>@Model.Product.Name</td></tr>
        <tr><th>Price</th><td>@Model.Product.Price</td></tr>*@
                <tr for="Product.Name" />
                <tr for="Product.Price" format="c" />

            </tbody>
        </table>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Price</label>
                <input name="price" class="form-control"
                       value="@Model.Product.Price" />
            </div>
            <button class="btn btn-primary"
                    type="submit">
                Submit
            </button>
        </form>
    </div>
</body>
</html>
